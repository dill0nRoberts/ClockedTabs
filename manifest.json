{
  "manifest_version": 2,

  "name": "ClockTabs",
  "description": "This extension helps organize tabs based on their time spent active.",
  "version": "1.0",

  "background": {
  "scripts": ["eventPage.js"],
	"persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
	"alarms",
	"tabs"
  ]
}